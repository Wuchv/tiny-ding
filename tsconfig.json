{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@app/*": [
                "./app/*"
            ],
        }
    },
    "include": [
        "./src/**/*",
        "./app/**/*",
        "./typings/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}